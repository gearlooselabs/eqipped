<script>
  //    this snippet changes the option colour


  $(document).ready(function () {
    $('#bType').css('color', 'gray');
    $('#bType').change(function () {
      var current = $('#select').val();
      if (current != 'null') {
        $('#select').css('color', 'black');
      } else {
        $('#select').css('color', 'gray');
      }
    });
  });

</script>


<div class="min-h-full  " style="background-color: #F2F3F4;">
  <div class="form-border">
    <div style="min-width: 50%">
      <div>
        <h2 class="m-10 text-center text-3xl font-extrabold text-gray-900 ">
          KYC Process
        </h2>
      </div>
      <div id="multi-step-form-container">



        <form id="userKYCForm" name="userKYCForm" action="/documentupload" method="POST">

          <section class="form-step" style="background-color: white;">
            <h2 class="font-normal">Fill in the details carefully</h2>


              <div class="space-x-0 lg:flex lg:space-x-4 mt-2">
                <div class="w-full mt-4">
                  <label for="bType" class="block mb- text-sm font-semibold text-gray-500">
                    Register as</label>
                  <select name="bType" id="bType" required
                    class="appearance-none rounded-none relative block w-full px-3 py-2 border placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:z-10 sm:text-sm">
                    <option style="color:gray" disabled selected hidden>Click to select â–½</option>
                    <option value="School">School / Junior College</option>
                    <option value="college">College / University</option>
                    <option value="Healthcare">Healthcare</option>
                    <option value="vendor">Vendor / Distributer</option>

                  </select>
                </div>
              </div>





              <div class="w-full  mt-4" id="GST" style="display:none;">
                <label for="first-name" class="sr-onl block mb- text-sm font-semibold text-gray-500">GST Number</label>
                <input id="GST-Input" name="udise" type="text"
                  class="appearance-none rounded-none relative block w-full px-3 py-2 border placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:z-10 sm:text-sm"
                  placeholder="GST Number">
              </div>
              <div class="w-full  mt-4" id="CIN" style="display:none;">
                <label for="first-name" class="sr-onl block mb- text-sm font-semibold text-gray-500">CIN</label>
                <input id="CIN-Input" name="gst" type="text" required
                  class="appearance-none rounded-none relative block w-full px-3 py-2 border placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:z-10 sm:text-sm"
                  placeholder="CIN Number">
              </div>
              <div class="w-full  mt-4" id="PAN" style="display:none;">
                <label for="first-name" class="sr-onl block mb- text-sm font-semibold text-gray-500">PAN</label>
                <input id="PAN-Input" name="pan" type="text" required
                  class="appearance-none rounded-none relative block w-full px-3 py-2 border placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:z-10 sm:text-sm"
                  placeholder="PAN Number">
              </div>
              <div class="w-full  mt-4" id="UDISE" style="display:none;">
                <label for="first-name" class="sr-onl block mb- text-sm font-semibold text-gray-500">U-DISE</label>
                <input id="UDISE-Input" name="udise" type="text" 
                  class="appearance-none rounded-none relative block w-full px-3 py-2 border placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:z-10 sm:text-sm"
                  placeholder="U-DISE Number">
              </div>
              <div class="w-full  mt-4" id="MAN" style="display:none;">
                <label for="first-name" class="sr-onl block mb- text-sm font-semibold text-gray-500">MAN</label>
                <input id="MAN-Input" name="man" type="text"
                  class="appearance-none rounded-none relative block w-full px-3 py-2 border placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:z-10 sm:text-sm"
                  placeholder="MAN Number">
              </div>

              <% if(messages.error) { %>
                <span class="text-red-600 mt-1 text-center font-medium">
                    <%= messages.error%>
                </span>
                <% } %>
                <% if(user.isuploded!='Yes' ) { %>
              <div class="rounded-md shadow-sm -space-y-px">
                
                <div class="w-full  mt-4" id="PDF" style="display:none;" >
                  <label for="PDF-Input" class="sr-onl block mb- text-sm font-semibold text-gray-500">Upload all document in PDF form</label>
                  <input id="PDF-Input" type="file" name="avatar" multiple class="appearance-none rounded-none relative block w-full px-3 py-2 border placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:z-10 sm:text-sm" required>
                </div>
                
              </div>
  
  
              <% } %>
              <% if(user.isuploded=='Yes' ) { %>
                <div class="rounded-md shadow-sm -space-y-px">
                  
                  <div>
                    <label for="uploadDocument" class="sr-onl">You Have Uploaded Your Document Sucessfully.<br>Kindly wait for 24 to 48hrs.</label>
                  </div>
                  
                </div>
                <% } %>






              <div class="mt-3 space-x-0 lg:flex lg:space-x-4">

                <button
                  class="button btn-navigate-form-step group relative w-full flex justify-center py-2 px-4  border border-transparent text-sm font-medium rounded-md text-white btn-primary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                  type="submit">Save & Continue</button>
              </div>
            </div>

          </section>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  $('#bType').on('change', function () {
    var selection = $(this).val();
    switch (selection) {

      case "School":

        $("#UDISE").show()
        $("#UDISE-Input").attr("required", "true").attr("placeholder", "U-DISE Number")
        $("#CIN").show()
        $("#PAN").show()
        $("#GST").show()
        $("#GST-Input").attr("placeholder", "GST Number ( Optional )").attr("required", "false");
       
        $("#MAN").hide()
        $("#MAN-Input").attr("required", "false")
       
        $("#PDF").show()

        break;
      case "college":

        $("#UDISE").show()
        $("#UDISE-Input").attr("required", "true").attr("placeholder", "U-DISE Number")
        $("#CIN").show()
        $("#PAN").show()
        $("#GST").show()
        $("#GST-Input").attr("placeholder", "GST Number ( Optional )").attr("required", "false");
        $("#MAN").show()
        $("#MAN-Input").attr("placeholder", "MAN Number ( Required for Medical Institutes )").attr("required", "false");

        $("#PDF").show()


        break;
      case "Healthcare":
      
        $("#CIN").show()
        $("#PAN").show()
        $("#GST").show()
        $("#GST-Input").attr("placeholder", "GST Number").attr("required", "true");
        $("#MAN").show()
        $("#MAN-Input").attr("placeholder", "MAN Number").attr("required", "true")

        $("#UDISE").hide()
        $("#UDISE-Input").attr("required", "false")
        
        $("#PDF").show()


        break;
      case "vendor":
       
        $("#CIN").show()
        $("#PAN").show()
        $("#GST").show()
        $("#GST-Input").attr("placeholder", "GST Number").attr("required", "true");
       
        $("#UDISE").hide()
        $("#UDISE-Input").attr("required", "false")
        $("#MAN").hide()
        $("#MAN-Input").attr("required", "false")

        $("#PDF").show()


        break;
      default:
        $("#schoolInput").hide()
    }
  });
</script>